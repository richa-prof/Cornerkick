- url = if @group.id.nil? then account_groups_path(@account) else account_group_path(@account, @group) end
= form_for @group, url: url do |f|
  - if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @group.errors.full_messages.each do |message|
          %li= message

  %fieldset.form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
    %fieldset.form-group
    = f.label :description
    = f.text_field :description, class: 'form-control'
  .actions
    = f.submit 'Save'
