- content_for :breadcrumb do
  %ol.breadcrumb
    %li.breadcrumb-item Cornerkick
    %li.breadcrumb-item
      %a{href: admin_groups_path} Users

    %li.breadcrumb-menu
      .btn-group
        %a.btn.btn-secondary{href: new_admin_user_path}
          %i.fa.fa-user-plus
          Create User

- content_for :sidebar_nav do
  - cache 'admin_sidebar_nav' do
    = render 'admin/admin_sidebar_nav'

-# content_for :sidebar_subnav do

- cache ['users-show', @user] do
  .row
    .col-md-6
      .card.card-accent-success
        .card-header
          Account
        .card-block
          %p
            %b Email:
            = @user.email
          %p
            %b First name:
            = @user.first_name
          %p
            %b Last name:
            = @user.last_name
        .card-footer
          = link_to 'Edit', edit_admin_user_path(@user)
          \|
          = link_to 'Back', admin_users_path
