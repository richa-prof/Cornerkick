- content_for :breadcrumb do
  %ol.breadcrumb
    %li.breadcrumb-item Cornerkick
    %li.breadcrumb-item Contacts

    %li.breadcrumb-menu
      .btn-group
        %a.btn.btn-secondary{href: new_admin_user_path}
          %i.fa.fa-user-plus
          Create User

- content_for :sidebar_nav do
  - cache 'admin_sidebar_nav' do
    = render 'admin/admin_sidebar_nav'

-# content_for :sidebar_subnav do

#users-index
  .row
    .col-md-12
      .card.card-accent-success
        .card-block
          %table#contacts.table.table-striped.table-hover.ml-auto
            %thead
              %tr
                %th Email
                %th First name
                %th Last name
                %th
                %th
                %th

            %tbody
              - @users.each do |user|
                %tr
                  %td= user.email
                  %td= user.first_name
                  %td= user.last_name
                  %td= link_to 'Show', admin_user_path(user)
                  %td= link_to 'Edit', edit_admin_user_path(user)
                  %td= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }

        .card-footer
          = paginate @users