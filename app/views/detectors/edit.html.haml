- content_for :breadcrumb do
  %ol.breadcrumb
    %li.breadcrumb-item= @account.name
    %li.breadcrumb-item Detectors

    %li.breadcrumb-menu
      .btn-group
        %a.btn.btn-secondary{href: new_account_detector_path(@account)}
          %i.fa.fa-user-plus
          Create Detector

- content_for :sidebar_nav do
  - cache ['main_sidebar_nav', @current_account] do
    = render 'shared/main_sidebar_nav'

#detectors-edit
  .row
    .col-md-6
      .card.card-accent-success
        .card-header
          Detector
        .card-block
          = render 'form'
        .card-footer
          = link_to 'Show', account_detector_path(@account, @detector)
          \|
          = link_to 'Back', account_detectors_path(@account)
